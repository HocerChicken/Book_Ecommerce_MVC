@model Category

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border mt-4 p-3">
        <div class="row">
            <h2 class="text-primary">Delete Category</h2>
            <hr/>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" readonly class="form-control"/>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" readonly class="form-control"/>
        </div>
        <div class="row">
            <div class="col-6 col-md-3 ms-auto">
                <a asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
            <div class="col-6 col-md-3">
                <button class="btn btn-primary form-control">Delete</button>
            </div>
        </div>
    </div>
</form>